#include<iostream>

bool comprobar_triangulos(int lado_a, int lado_b, int lado_c) {
	int suma_A;
	int suma_B;
	int suma_C;


	suma_A = lado_a + lado_b;
	suma_B = lado_b + lado_c;
	suma_C = lado_c + lado_a;

	if (suma_A > lado_c && suma_B > lado_a && suma_C > lado_b) {
		return true;
	}
	else {
		return false;
	}
}

int main() {
	int lado1;
	int lado2;
	int lado3;
	bool comprobar_validez;

	int suma_A;
	int suma_B;
	int suma_C;

	std::cout << "introduzca la medida de los lados";

	std::cin >> lado1;
	std::cin >> lado2;
	std::cin >> lado3;

	comprobar_validez = comprobar_triangulos(lado1, lado2, lado3);
	std::cout << comprobar_validez;
	if (comprobar_validez == false) {
		std::cout << "las medidas no forman un triangulo";
		return 0;
	}
	else if (lado1 == lado2 && lado2 == lado3 && lado3 == lado1) {
		std::cout << "el triangulo es equilatero";
		return 0;
	}
	else if (lado1 == lado2 || lado2 == lado3 || lado3 == lado1) {
		std::cout << "el triangulo es isosceles";
		return 0;
	}
	else {
		std::cout << "el triangulo es escaleno";
		return 0;
	}
}
